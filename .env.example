# OusPoser Environment Configuration
# Copy this file to .env and update with your actual values

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ousposer
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# Alternative database environment variables (used by some scripts)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ousposer
DB_USER=postgres
DB_PASSWORD=your_password_here

# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration (for future use)
API_BASE_URL=http://localhost:3000
FRESH_SPOT_API_VERSION=1.0

# Security (for production)
# SESSION_SECRET=your_session_secret_here
# JWT_SECRET=your_jwt_secret_here

# External APIs (for future integrations)
# MAPBOX_ACCESS_TOKEN=your_mapbox_token_here
# OPENWEATHER_API_KEY=your_weather_api_key_here

# Logging
LOG_LEVEL=info

# Fresh Spot Algorithm Configuration (optional overrides)
# FRESH_SPOT_TREE_RADIUS=150
# FRESH_SPOT_BENCH_RADIUS=200
# FRESH_SPOT_TRASH_RADIUS=200
